{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Blockscout",
  "colors": {
    "primary": "#5351db",
    "light": "#5351db",
    "dark": "#5351db"
  },
  "favicon": "/favicon.png",
  "background": {
    "colors": {
      "light": "#fdfffe"
    },
    "decoration": "gradient"
  },
  "appearance": {
    "default": "light"
  },
  "fonts": {
    "heading": {
      "family": "Poppins"
    },
    "body": {
      "family": "Inter"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "pages": [
          "index",
          {
            "group": "About BlockScout",
            "pages": [
              {
                "group": "Features",
                "pages": [
                  "about/features",
                  "about/features/ethereum-bytecode-database-microservice",
                  "about/features/blockscout-2.0"
                ]
              },
              "about/chains",
              {
                "group": "News & Media",
                "pages": [
                  "about/announcements",
                  "about/announcements/newsletter-and-blog"
                ]
              }
            ]
          },
          {
            "group": "FAQs",
            "pages": [
              "faqs/faqs"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Blockscout APIs",
            "pages": [
              "devs/apis",
              "devs/apis/requests-and-limits"
            ]
          },
          {
            "group": "Merits Admin service",
            "openapi": "merits-admin-service.yaml"
          },
          {
            "group": "Merits APIs",
            "openapi": "openapi.yaml"
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Careers",
          "href": "https://blockscout.bamboohr.com/careers",
          "icon": "graduation-cap"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/blockscout",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://www.blog.blockscout.com/",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://www.blockscout.com/"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://github.com/sponsors/blockscout"
      }
    ],
    "primary": {
      "type": "github",
      "href": "https://github.com/blockscout/blockscout"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/blockscout/blockscout",
      "telegram": "https://t.me/blockscoutcommunity",
      "discord": "https://discord.gg/blockscout",
      "x": "https://x.com/blockscout"
    }
  }
}
